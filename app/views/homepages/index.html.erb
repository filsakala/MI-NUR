<h1>Aktuálne</h1>

<div class="ui three cards">
  <% if @aktualna_knizka %>
      <div class="card">
        <div class="content">
          <div class="header">
            Knižka
            <%= link_to knizka_path(@aktualna_knizka) do %>
                <i class="unhide icon"></i>
            <% end %>
          </div>
          <div class="meta">
            <%= @aktualna_knizka.rocnik %>.
            ročník, <%= @aktualna_knizka.seria %> séria,
            <%= @aktualna_knizka.cislo %>. knižka
          </div>
          <div class="description">
            <% if @aktualna_knizka.knizka_obsahs.count > 0 %>
                <div class="ui list">
                  <% @aktualna_knizka.knizka_obsahs.order(:cislo).each do |k| %>
                      <div class="item">
                        <%= k.nazov %>
                        <% if k.nazov.start_with?('Zadania') %>
                            <%= link_to zadania_knizka_path(@aktualna_knizka, k.id) do %>
                                <i class="unhide link icon"></i>
                            <% end %>
                        <% elsif k.nazov.start_with?('Vzoráky') %>
                            <%= link_to nil, data: { confirm: 'Not implemented.' } do %>
                                <i class="unhide link icon"></i>
                            <% end %>
                        <% elsif k.nazov.start_with?('Výsledkovka') %>
                            <%= link_to nil, data: { confirm: 'Not implemented.' } do %>
                                <i class="unhide link icon"></i>
                            <% end %>
                        <% elsif k.nazov.start_with?('Článok') %>
                            <%= link_to nil, data: { confirm: 'Not implemented.' } do %>
                                <i class="unhide link icon"></i>
                            <% end %>
                            <%= link_to nil, data: { confirm: 'Not implemented.' } do %>
                                <i class="edit link icon"></i>
                            <% end %>
                        <% end %>
                      </div>
                  <% end %>
                </div>
            <% else %>
                Knižka zatiaľ nemá obsah.
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
  <div class="card">
    <div class="content">
      <div class="header">
        Ročník, séria
        <%= link_to rocnik_path(@aktualny_rocnik) do %>
            <i class="unhide icon"></i>
        <% end %>
      </div>
      <div class="meta">
        <%= @aktualna_knizka.rocnik %>. ročník, Letná séria
      </div>
    </div>
    <div class="extra content">
      <div class="description">
        <h3>Knižky</h3>
        <div class="ui list">
          <% @knizky_l.each do |k| %>
              <div class="item"><%= link_to "#{k.cislo}. knižka", k %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="extra content">
      <div class="description">
        <h3>Kolá</h3>
        <div class="ui list">
          <% @kola_l.each do |kolo| %>
              <div class="item"><%= link_to "#{kolo.cislo}. kolo", kolo %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="extra content">
      <div class="description">
        <h3>Riešitelia</h3>
        <%= link_to "Pridať riešiteľov", nil, data: { confirm: 'Not implemented.' }, class: 'ui green button' %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="content">
      <div class="header">
        Opravovanie
      </div>
      <div class="meta">
        <%= @aktualna_knizka.rocnik %>.
        ročník, <%= @aktualna_knizka.seria %> séria,
        1. kolo
      </div>
      <div class="description">
        <div class="ui fluid vertical inverted green buttons">
          <%= link_to "Prihlás sa", nil, data: { confirm: 'Not implemented.' }, class: 'ui button' %>
          <%= link_to "Zadaj body", nil, data: { confirm: 'Not implemented.' }, class: 'ui button' %>
          <%= link_to "Napíš vzorák", nil, data: { confirm: 'Not implemented.' }, class: 'ui button' %>
        </div>
      </div>
    </div>
  </div>
</div>

